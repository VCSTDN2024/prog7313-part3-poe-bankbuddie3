                android:layout_columnWeight="1"
                android:gravity="center"
                android:text="Sun"
                android:textColor="#3F51B5"
                android:textSize="14sp" />

            <!-- Week 1 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="1"
                android:textColor="#000000"
                android:textSize="14sp" />

