                android:text="29"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="30"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:padding="8dp"
                android:text="31"
                android:textColor="#000000"
                android:textSize="14sp" />

        </GridLayout>

        <LinearLayout
            android:id="@+id/segmentControl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/calendarGrid">

            <TextView
                android:id="@+id/spendButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_segment_selected"
                android:gravity="center"
                android:padding="8dp"
                android:text="Spends"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/categoriesButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_segment_unselected"
                android:gravity="center"
                android:padding="8dp"
                android:text="Categories"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/transactionsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/segmentControl"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_transaction" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/bottomNavigation"
        layout="@layout/layout_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
